{
  "ts-node": {
    "files": true
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "lib/types/*"],
    },
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
  }
}
